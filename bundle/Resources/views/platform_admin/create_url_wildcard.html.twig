{% trans_default_domain 'redirect' %}

    <section class="container mt-4 px-5">
        {# display errors #}
        {% if errors is defined and errors is not empty %}
            <div class="alert alert-danger" role="alert">
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        {# display messages #}
        {% if messages is defined and messages is not empty%}
            <div class="alert alert-success" role="alert">
                <ul>
                    {% for message in messages %}
                        <li>{{ message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <div>
            <div class="box-header">
                <div class="box-ml">
                    <h1 class="context-title">{{ 'nova.redirect.create.title'|trans }}</h1>
                    <div class="header-mainline"></div>
                </div>
            </div>

            <div class="box-content mb-6">
                <div class="box-content mb-3">

                    {{ form_start(form, {'attr': {'class': ''}}) }}

                    <div class="form-group">
                        {{ form_label(form.source, 'nova.redirect.create.source'|trans , {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.source, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.destination, 'nova.redirect.create.destination'|trans , {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        <div class="col-sm-10">
                             {{ form_widget(form.destination, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group form-check">
                        <div class="col-sm-10">
                            {{ form_widget(form.type, {'attr': {'class': 'form-check-input'}} ) }}
                        </div>
                        {{ form_label(form.type, 'nova.redirect.create.type'|trans , {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                    {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
                    {{ form_widget(form.save, {'label': 'nova.redirect.button.create'|trans, 'attr': {'class': 'btn btn-primary'} }) }}
                    {{ form_rest(form) }}
                    {# Fermeture de la balise <form> du formulaire HTML #}
                    {{ form_end(form) }}

                </div>
            </div>

            <div class="ez-table-header">
                <div class="ez-table-header__headline"></div>
            </div>
        </div>
    </section>
